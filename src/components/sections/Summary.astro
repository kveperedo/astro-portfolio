---
import { getEntryBySlug } from 'astro:content';
import ArrowDownLink from '../ArrowDownLink.astro';

const porfolioInfo = await getEntryBySlug('portfolio', 'info');
const { summary } = porfolioInfo.data;
---

<section
    id="summary"
    class="relative flex flex-col items-center justify-center gap-16 px-8 py-16 md:h-screen">
    {
        summary.map((paragraph) => (
            <h1
                class="text-center font-serif text-lg font-light leading-loose text-neutral-100 
                md:text-xl md:leading-[2.5] lg:text-2xl lg:leading-[2.5]">
                {paragraph}
            </h1>
        ))
    }

    <ArrowDownLink
        className="md:absolute md:bottom-0 mt-4 md:mt-0 md:mb-9"
        href="#info"
    />
</section>
