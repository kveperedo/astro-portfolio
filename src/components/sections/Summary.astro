---
import { getEntryBySlug } from 'astro:content';
import ArrowDownLink from '../ArrowDownLink.astro';

const porfolioInfo = await getEntryBySlug('portfolio', 'info');
const { summary } = porfolioInfo.data;
---

<section
    id="summary"
    class="relative flex flex-col items-center justify-center gap-16 px-8 py-16 md:h-screen">
    {
        summary.map((paragraph) => (
            <p
                class="text-center font-serif text-lg font-light leading-loose text-slate-100 
                md:text-2xl md:leading-[2.5] lg:text-3xl lg:leading-[2.5]">
                {paragraph}
            </p>
        ))
    }

    <ArrowDownLink className="md:absolute md:bottom-0 md:mb-9" href="#info" />
</section>
