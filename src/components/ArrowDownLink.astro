---
import clsx from 'clsx';

interface Props {
    href: string;
    className?: string;
}

const { href, className } = Astro.props;
---

<a class={clsx('cursor-pointer', className)} href={href}>
    <svg
        class="h-6 w-6 animate-bounce text-slate-100"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-6 w-6">
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3"></path>
    </svg>
</a>
